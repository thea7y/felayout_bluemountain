{{!-- iconTextSettings settings:
        disableWholeAreaLink = true/false (by deafalt false);
        btnAsLink = true/false (by deafalt false);
        buttonLink = "" (set href to the element);
        header = "" (set element heading);
        text = "" (set text content to element);
        buttonName = "" (set button or link name);
        headerLeftIcon = "" (set class name to element icon);
--}}

<div class="icon-text-btn__wrp">
    <div class="icon-text-btn{{#if this.disableWholeAreaLink}}{{else}} _whole-area-link{{/if}}">
        <h3 class="icon-text-btn__header">
            <span class="icon-text-btn__icon icons icon-{{headerLeftIcon}}"></span>
            {{header}}
        </h3>
        {{#if this.text}}
            <p class="icon-text-btn__p">{{text}}</p>
        {{/if}}
        {{#if this.buttonName}}
            <a class="icon-text-btn__link {{#if this.btnAsLink}}{{else}}btn btn-default {{/if}}" title="{{buttonName}}" href="{{#if this.buttonLink}}{{buttonLink}}{{else}}#{{/if}}">{{buttonName}}</a>
        {{/if}}
        {{#if this.disableWholeAreaLink}}{{else}}
            <span class="icon-text-btn__sham-link {{#if this.btnAsLink}}{{else}}btn btn-default {{/if}}">{{buttonName}}</span>
        {{/if}}
    </div>
</div>
